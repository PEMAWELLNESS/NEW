@model IEnumerable<Rooms.Models.HabitModel>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Health Details</title>
</head>


<body>
    <hr />
    
    <center><h2 style="font-weight:bold;font-size:x-large"><u>Habit Details</u></h2></center>
    <table cellpadding="0" cellspacing="0" width="100%" style="border: 1px;" rules="none">
        <tr style="outline: thin solid">

            <td style="width:100px;font-weight:bold">Habit Question</td>
            <td style="width:60px;font-weight:bold">Answer</td>
            <td style="width:200px;font-weight:bold">Description</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="outline: thin solid">

                <td>
                    @Html.DisplayFor(modelItem => item.HBQuestion)
                </td>
                <td>
                    : @Html.DisplayFor(modelItem => item.HBQFreq)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.HBDesc)
                </td>
            </tr>
        }

    </table>


</body>

</html>

