
@{
    ViewBag.Title = "LeaveMangement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/CustomJS/jquery.min.js"></script>
    <style>
        input:focus {
            outline: none;
        }
    </style>
</head>
<body>
    <div style="font-size:23px;">
        <center><b style="border-bottom:1px solid black">BAYPARK HOTEL & RESORTS PVT. LTD.</b></center><br />
        <center><b style="border-bottom:1px solid black">LEAVE APPLICATION FORM </b></center>
    </div><br />
    <div class="form-group" style="font-size:20px;">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <div class="col-md-2"></div>
                    <div class="col-md-3"><b style="float:right;">Employee Id :</b></div>
                    <div class="col-md-3">
                        <input type="text" style="border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="employeeid" name="employeeid" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-1"></div>
                    <div class="col-md-4"><b style="float:right;">Employee Name :</b></div>
                    <div class="col-md-3">
                        <input type="text" style="border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="employeename" name="employeename" />
                    </div>
                </div>
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <div class="col-md-1"></div>
                    <div class="col-md-4"><b style="float:right;">Type of Leave :</b></div>
                    <div class="col-md-3">
                        <table>
                            <tr>
                                <td style="width:25%;"></td>
                                <td>
                                    <input type="checkbox" id="cl" name="cl" />
                                </td>
                                <td><b>&nbsp;&nbsp;&nbsp;CL</b></td>
                            </tr>
                            <tr>
                                <td style="width:25%;"></td>
                                <td>
                                    <input type="checkbox" id="sl" name="sl" />
                                </td>
                                <td><b>&nbsp;&nbsp;&nbsp;SL</b></td>
                            </tr>
                            <tr>
                                <td style="width:25%;"></td>
                                <td>
                                    <input type="checkbox" id="Pl" name="Pl" />
                                </td>
                                <td><b>&nbsp;&nbsp;&nbsp;PL</b></td>
                            </tr>
                            <tr>
                                <td style="width:25%;"></td>
                                <td>
                                    <input type="checkbox" id="lop" name="lop" />
                                </td>
                                <td><b>&nbsp;&nbsp;&nbsp;LOP</b></td>
                            </tr>
                            <tr>
                                <td style="width:25%;"></td>
                                <td>
                                    <input type="checkbox" id="other" name="other" />
                                </td>
                                <td><b>&nbsp;&nbsp;&nbsp;Others</b></td>
                            </tr>
                            <tr>
                                <td style="width:25%;"></td>
                                <td></td>
                                <td>
                                    <input type="text" style="border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="others" name="others" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="col-md-6">
                    <table>
                        <tr>
                            <td style="width:18%;"></td>
                            <td><b style="float:right;">Designation :</b></td>
                            <td>
                                <input type="text" style="margin-left:23px;border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="designation" name="designation" />
                            </td>
                        </tr>
                        <tr>
                            <td style="width:18%;"></td>
                            <td><b style="float:right;">From :</b></td>
                            <td>
                                <input type="text" style="margin-left:23px;border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="from" name="from" />
                            </td>
                        </tr>
                        <tr>
                            <td style="width:18%;"></td>
                            <td><b style="float:right;">TO :</b></td>
                            <td>
                                <input type="text" style="margin-left:23px;border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="to" name="to" />
                            </td>
                        </tr>
                        <tr>
                            <td style="width:18%;"></td>
                            <td><b style="float:right;">No of Days :</b></td>
                            <td>
                                <input type="text" style="margin-left:23px;border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="noofdays" name="noofdays" />
                            </td>
                        </tr>
                        <tr>
                            <td style="width:18%;"></td>
                            <td><b style="float:right;">Contact Number :</b></td>
                            <td>
                                <input type="text" style="margin-left:23px;border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="contactnumber" name="contactnumber" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-1"> </div>
                <div class="col-md-2"><b>Purpose of Leave :</b></div>
                <div class="col-md-7">
                    <input type="text" style="width:100%;border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="purpose" name="purpose" />
                </div>
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6"> </div>
                <div class="col-md-6">
                    <div class="col-md-5"><b>Signature of the Employee :</b></div>
                    <div class="col-md-7">
                        <input type="text" style="width:100%;border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="purpose" name="purpose" />
                    </div>
                </div>
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-6">
                <table>
                    <tr>
                        <td style="width:20%;"> </td>
                        <td><b>Leaves Entitled :</b></td>
                        <td><input type="text" style="margin-left: 37px;border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="Entitled" name="Entitled" /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;"> </td>
                        <td><b>Leaves Availed :</b></td>
                        <td><input type="text" style="margin-left: 37px;border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="Availed" name="Availed" /></td>
                    </tr>
                    <tr>
                        <td style="width:20%;"> </td>
                        <td><b>Leaves Available :</b></td>
                        <td><input type="text" style="margin-left: 37px;border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" id="Available" name="Available" /></td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <div class="col-md-1"></div>
                <div class="col-md-6"><b style="float:right;">Status of Leave :</b></div>
                <div class="col-md-5">
                    <input type="checkbox" id="Sanctioned" name="Sanctioned" />&nbsp;&nbsp;&nbsp;Sanctioned<br />
                    <input type="checkbox" id="losofpay" name="losofpay" />&nbsp;&nbsp;&nbsp;Loss of Pay <br />
                </div>
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-4">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    <input style="border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" type="text" id="signhr" name="signhr" />
                </div>
                <br /><br />
                <div class="col-md-5"></div>
                <div class="col-md-4">Sign. of HR </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    <input style="border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" type="text" id="recommand" name="recommand" />
                </div>
                <br /><br />
                <div class="col-md-5"></div>
                <div class="col-md-5">Recommended By </div>
            </div>
            <div class="col-md-4">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    <input style="border-bottom:1px solid black;border-left:none;border-right:none;border-top:none;" type="text" id="Approved" name="Approved" />
                </div>
                <br /><br />
                <div class="col-md-5"></div>
                <div class="col-md-5">Approved By </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <div class="col-md-3"><b>Date :</b></div>
                <div class="col-md-2">
                    <input style="border:none;margin-top: -12px;" type="date" id="date" name="date" />
                </div>
            </div>
        </div>
    </div><br />
</body>
</html>
