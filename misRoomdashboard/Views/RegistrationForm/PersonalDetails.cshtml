@model Rooms.Models.NC_TBL_PERSONAL_DETAILS

@{
    ViewBag.Title = "PersonalDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<head>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/JSFiles/PersonalDetails.js"></script>
    <link href="~/4/form_glb_small.css" rel="stylesheet" />
    <link href="~/4/form_pw.css" rel="stylesheet" />
    <link href="~/4/jquery-ui - Copy.css" rel="stylesheet" />
    <link href="~/4/jquery-ui.css" rel="stylesheet" />
    <link href="~/4/reset_css.css" rel="stylesheet" />
    <link href="~/4/style_dashboard.css" rel="stylesheet" />
</head>


<body>
    <div class="form_pema">
        <h2>PersonalDetails</h2>
        <div class="form_content">
            <!--Form Global starts here-->
            <div id="form_global">

                @using (Html.BeginForm())
            {
                    @Html.ValidationSummary(true)
                    <fieldset>


                        <table style="margin-top:60px;">
                            <tr>
                                <td><div class="img_disble_button">Booking&nbsp;Information</div></td>
                                <td><div class="img_active_button">Personal&nbsp;Details</div></td>
                                <td><div class="img_disble_button">Health&nbsp;Details</div></td>
                                <td><div class="img_disble_button">Habit&nbsp;Details</div></td>
                                <td><div class="img_disble_button">Payment&nbsp;Details</div></td>
                            </tr>
                        </table>


                        <table>

                            @*<tr><td colspan="4" align="right">

                                <input type="button" value="Previous" class="submit" onclick="history.go(-1);" />&nbsp;
                                    <input type="submit" id="FirstSubmitbutton" value="Next" class="submit" /></td>
                                </tr>*@
                            <tr>
                                <td><label>Earlier PRNO</label></td>
                                <td>
                                    <input type="text" id="EPRNO" placeholder="Earlier PRNO" />
                                </td>

                                <td>
                                    &nbsp;

                                </td>

                                <td>
                                    &nbsp;

                                </td>

                            </tr>
                            <tr>
                                <td>
                                    @*@Html.LabelFor(model => model.FirstName)*@
                                    <label>First Name<span class="mandatory">*</span></label>
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.FirstName, new { @readonly = true })
                                    @Html.ValidationMessageFor(model => model.FirstName)
                                </td>
                                <td style="display:none">

                                    <label>Middle Name</label>
                                </td>
                                <td style="display:none">
                                    @Html.TextBoxFor(model => model.MiddleName, new { @readonly = true })
                                    @Html.ValidationMessageFor(model => model.MiddleName)
                                </td>
                            </tr>
                            <tr>
                                <td>

                                    <label>Surname<span class="mandatory">*</span></label>
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.LastName, new { @readonly = true })
                                    @Html.ValidationMessageFor(model => model.LastName)
                                </td>
                                <td>
                                    <label>Alias Name</label>
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.AliasName)
                                    @Html.ValidationMessageFor(model => model.AliasName)
                                </td>
                            </tr>
                            <tr>
                                <td style="display:none">
                                    <label>Father/Husband Name<span class="mandatory">*</span></label>
                                </td>
                                <td style="display:none">
                                    @Html.TextBoxFor(model => model.FatherHusbandName, new { @readonly = true })
                                    @Html.ValidationMessageFor(model => model.FatherHusbandName)
                                </td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>
                                    <label>Gender<span class="mandatory">*</span></label>
                                </td>
                                <td>
                                    @Html.RadioButton("Gender", "M", true, new { id = "rb1", @readonly = "readonly" })Male
                                    @Html.RadioButton("Gender", "F", new { id = "rb2", @readonly = "readonly" })Female
                                    @Html.ValidationMessageFor(model => model.Gender)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @*@Html.LabelFor(model => model.MaritalStatus)*@
                                    <label>Marital Status<span class="mandatory">*</span></label>
                                </td>
                                <td>

                                    @Html.RadioButton("MaritalStatus", "S", true, new { id = "rb3" })Single
                                    @Html.RadioButton("MaritalStatus", "M", new { id = "rb4" })Married
                                    @Html.ValidationMessageFor(model => model.MaritalStatus)
                                </td>

                                <td>
                                    @*@Html.LabelFor(model => model.FlatNo)*@
                                    <label>FlatNo<span class="mandatory">*</span></label>
                                </td>
                                <td>

                                    @Html.EditorFor(model => model.FlatNo)
                                    @Html.ValidationMessageFor(model => model.FlatNo)
                                </td>


                            </tr>

                            <tr>
                                <td>@Html.LabelFor(model => model.Building)</td>
                                <td>
                                    @Html.EditorFor(model => model.Building)
                                    @Html.ValidationMessageFor(model => model.Building)
                                </td>
                                <td>
                                    @*@Html.LabelFor(model => model.Street)*@
                                    <label>Street<span class="mandatory">*</span></label>
                                </td>

                                <td>
                                    @Html.EditorFor(model => model.Street)
                                    @Html.ValidationMessageFor(model => model.Street)
                                </td>


                            </tr>
                            <tr>
                                <td>
                                    @*@Html.LabelFor(model => model.City)*@
                                    <label>City<span class="mandatory">*</span></label>
                                </td>

                                <td>
                                    @Html.EditorFor(model => model.City)
                                    @Html.ValidationMessageFor(model => model.City)
                                </td>
                                <td>
                                    @*@Html.LabelFor(model => model.PinCode)*@
                                    <label>PinCode</label>
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.PinCode)
                                    @Html.ValidationMessageFor(model => model.PinCode)
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    @*@Html.LabelFor(model => model.Nationality)*@
                                    <label>Nationality<span class="mandatory">*</span></label>
                                </td>
                                <td>
                                    @Html.DropDownList("Nationality", ViewBag.Nationalities as SelectList, "Select Nationality")
                                    @Html.ValidationMessageFor(model => model.Nationality)
                                </td>
                                <td>
                                    @*@Html.LabelFor(model => model.Country)*@
                                    <label>Country<span class="mandatory">*</span></label>
                                </td>
                                <td>
                                    @Html.DropDownList("Country", ViewBag.Countries as SelectList, "Select Country")
                                    @Html.ValidationMessageFor(model => model.Country)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @*@Html.LabelFor(model => model.DOB)*@
                                    <label>Date of Birth<span class="mandatory">*</span></label>
                                </td>
                                <td>

                                    @*@Html.TextBoxFor(model => model.DOB, "{0:dd/MM/yyyy}", new { @readonly = true })*@
                                    @Html.TextBoxFor(model => model.DOB, "{0:dd/MM/yyyy}")

                                    @Html.ValidationMessageFor(model => model.DOB)
                                    @*<input type="text" id="DOB" name="DOB" />*@
                                </td>
                                <td>
                                    @*@Html.LabelFor(model => model.Age)*@
                                    <label>Age</label>
                                </td>
                                <td bgcolor="red">
                                    @Html.TextBoxFor(model => model.Age, new { @readonly = true, style = "bgcolour:red;" })
                                    @Html.ValidationMessageFor(model => model.Age)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @*@Html.LabelFor(model => model.MobileNo)*@
                                    <label>Mobile Number<span class="mandatory">*</span></label>
