                                <td>
                                    @Html.EditorFor(model => model.EmergencyContactNo)
                                    @Html.ValidationMessageFor(model => model.EmergencyContactNo)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @*@Html.LabelFor(model => model.EmailId)*@
                                    <label>E-Mail<span class="mandatory">*</span></label>
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.EmailId, new { @readonly = true })
                                    @Html.ValidationMessageFor(model => model.EmailId)
                                </td>
                                <td>
                                    @Html.LabelFor(model => model.Occupation)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Occupation)
                                    @Html.ValidationMessageFor(model => model.Occupation)
                                </td>



