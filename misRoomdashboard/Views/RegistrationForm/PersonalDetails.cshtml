                                    <label>Height(in Cms)<span class="mandatory">*</span></label>
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Height)
                                    @Html.ValidationMessageFor(model => model.Height)
                                </td>
                                <td>
                                    @*@Html.LabelFor(model => model.Weight)*@
                                    <label>Weight(in Kgs)<span class="mandatory">*</span></label>

                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Weight)
                                    @Html.ValidationMessageFor(model => model.Weight)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @*@Html.LabelFor(model => model.BP)*@
                                    <label>BP<span class="mandatory">*</span></label>
                                </td>
                                <td>
                                    @Html.TextBoxFor(model => model.BP, "", new { placeholder = "Systolic / Diastolic" })
                                    @Html.ValidationMessageFor(model => model.BP)
                                </td>
                                <td>
                                    @*@Html.LabelFor(model => model.PulseRate)*@
                                    <label>Pulse Rate<span class="mandatory">*</span></label>

                                </td>
                                <td>
                                    @Html.EditorFor(model => model.PulseRate)
                                    @Html.ValidationMessageFor(model => model.PulseRate)
                                </td>
                            </tr>



