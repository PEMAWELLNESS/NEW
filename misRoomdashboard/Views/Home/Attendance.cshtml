<script>
    $(document).ready(function () {
        $.ajax({
            url: "/Home/GetAttendanceStatus/",
            cache: false,
            async: false,
            type: "GET",
            success: function (data) {
                if (data == 0) {
                    alert("No Employees are Available in master");
                }
                else {
                    debugger;
                    $("#attendance").empty();
                    $("#attendance").append('<option value="-1">Select Status</option>');
                    $.each(data, function (i, x) {
                        $("#attendance").append('<option value="' + x.Id + '">' + x.Status + '</option>');
                    });
                }
            },
            error: function (response) {
                alert("error : " + response);
            }
        });
        $.ajax({
            url: "/Home/GetEmployees/",
            cache: false,
            async: false,
            type: "GET",
            success: function (data) {
                if (data == 0) {
                    alert("No Employees are Available in master");
                }
                else {
                    debugger;
                    $("#empcode").empty();
                    $("#empcode").append('<option value="-1">Select Employee Code</option>');
                    $.each(data, function (i, x) {
                        $("#empcode").append('<option value="' + x.Id + '">' + x.EmpName + '</option>');
                    });
                }
            },
            error: function (response) {
                alert("error : " + response);
            }
        });
    });
</script>
